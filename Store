const productos = [
  { nombre: "Mix Origen Noble", kg: 5500, medio: 2750, categoria: "catalogo" },
  { nombre: "Granola Origen Noble", kg: 5200, medio: 2600, categoria: "catalogo" },
  { nombre: "Almendras", kg: 8200, medio: 4100, categoria: "catalogo" },
  { nombre: "Ar치ndanos deshidratados", kg: 9800, medio: 4900, categoria: "catalogo" },
  { nombre: "Bud칤n Banana & Nuez", kg: 6900, medio: 3450, categoria: "bakego" },
  { nombre: "Pan Integral Multisemillas", kg: 6500, medio: 3250, categoria: "bakego" }
];

let carrito = [];

function mostrarProductos() {
  const contenedorCatalogo = document.getElementById("productos");
  const contenedorBakego = document.getElementById("bakegoProductos");

  productos.forEach(prod => {
    const div = document.createElement("div");
    div.className = "producto";
    div.innerHTML = `
      <h3>${prod.nombre}</h3>
      <p>1 kg: $${prod.kg}</p>
      <p>췋 kg: $${prod.medio}</p>
      <button onclick="agregar('${prod.nombre}', 'kg')">Agregar 1 kg</button>
      <button onclick="agregar('${prod.nombre}', 'medio')">Agregar 췋 kg</button>
    `;
    if (prod.categoria === "catalogo") contenedorCatalogo.appendChild(div);
    else contenedorBakego.appendChild(div);
  });
}

function agregar(nombre, tama침o) {
  const prod = productos.find(p => p.nombre === nombre);
  const precio = tama침o === "kg" ? prod.kg : prod.medio;
  carrito.push({ nombre, tama침o, precio });
  actualizarCarrito();
}

function agregarPersonalizado() {
  const base = document.getElementById("basePersonalizada").value;
  const extras = document.getElementById("extrasPersonalizados").value;
  if (!base) return alert("Complet치 la base de la preparaci칩n.");

  carrito.push({
    nombre: `Preparaci칩n personalizada: ${base}`,
    tama침o: "a definir",
    precio: 0,
    extras
  });

  document.getElementById("basePersonalizada").value = "";
  document.getElementById("extrasPersonalizados").value = "";
  actualizarCarrito();
}

function actualizarCarrito() {
  const lista = document.getElementById("listaCarrito");
  lista.innerHTML = "";
  let total = 0;

  carrito.forEach((item, index) => {
    total += item.precio;
    const li = document.createElement("li");
    li.innerHTML = `${item.nombre} (${item.tama침o}) - $${item.precio}`;
    lista.appendChild(li);
  });

  document.getElementById("total").innerText = "Total estimado: $" + total;
}

function finalizarPedido() {
  if (carrito.length === 0) {
    alert("El carrito est치 vac칤o.");
    return;
  }

  let mensaje = "Hola! Quiero realizar este pedido:%0A";
  carrito.forEach(item => {
    mensaje += `- ${item.nombre} (${item.tama침o})%0A`;
    if (item.extras) mensaje += `  Extras: ${item.extras}%0A`;
  });

  window.open(`https://wa.me/5490000000000?text=${mensaje}`);
}

mostrarProductos();
